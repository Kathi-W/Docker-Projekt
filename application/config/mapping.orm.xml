<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                     http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Controller\Recipe" repository-class="RecipeRepository" table="recipe">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="title" type="string"/>
        <field name="note" type="string"/>

        <one-to-many target-entity="ingredient" mapped-by="recipe" field="ingredient" />
    </entity>

    <entity name="Ingerdient">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <many-to-one target-entity="recipe" field="recipe"/>
    </entity>

</doctrine-mapping>